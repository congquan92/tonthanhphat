generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

model ContactInfo {
  id String @id @default(uuid())

  // Company Info
  companyName        String?
  companyShortName   String?
  companyTagline     String?
  companySlogan      String?
  companyDescription String?

  companyEmail String?
  iframeMap    String?

  companyPhone Json?
  addresses    Json?
  socialLinks  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_info")
}

model Category {
  id         String     @id @default(uuid())
  name       String
  slug       String     @unique
  products   Product[]
  order      Int        @default(0)
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("categories")
}

model Product {
  id             String    @id @default(uuid())
  name           String
  slug           String    @unique
  shortDesc      String? // Mô tả ngắn cho listing
  description    String?   @db.Text // Mô tả chi tiết (HTML)
  images         Json? // Array URLs hình ảnh từ Cloudinary
  imagePublicIds Json? // Array Cloudinary public IDs tương ứng với images
  thumbnail      String? // URL ảnh đại diện
  specs          Json? // Thông số kỹ thuật [{key, value}]
  categoryId     String?
  category       Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  isActive       Boolean   @default(true)
  isFeatured     Boolean   @default(false) // Sản phẩm nổi bật cho homepage
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("products")
}

model Banner {
  id        String   @id @default(uuid())
  imageUrl  String
  publicId  String? // Cloudinary public ID for easier deletion
  alt       String
  order     Int      @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("banners")
}
